{% block table %}
    <div class="order">
        <div class="head">
            {% for label, messages in app.flashes(['danger', 'warning']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <h3>Liste des catégories :</h3>
            <i class='bx bx-search' ></i>
            <i class='bx bx-filter' ></i>
        </div>
        <table>
            <thead>
            <tr>
                <th>Libellé</th>
                <th>Prix</th>
                <th>Suppression</th>
                <th>Modification</th>
            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.libelle }}</td>
                    <td>{{ categorie.prix }}</td>
                    <td> <a href="{{ path('app_admin_delete_categorie',{ 'idCat': categorie.id}) }}">Supprimer</a></td>
                    <td> <a href="{{ path('app_admin_update_categorie',{ 'idCat': categorie.id}) }}">Modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

