{% extends 'base.html.twig' %}

{% block title %}Licence index{% endblock %}

{% block body %}
    <h1>Licence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Moniteur</th>
                <th>Libellé de la Catégorie</th>
                <th>Date de l'obtention</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for licence in licences %}
            <tr>
                <td>{{ licence.id }}</td>
                <td>{{ licence.codemoniteur.prenom }} {{ licence.codemoniteur.nom }}</td>
                <td>{{ licence.codecategorie.libelle }}</td>
                <td>{{ licence.dateobtention ? licence.dateobtention|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_licence_show', {'id': licence.id}) }}">show</a>
                    <a href="{{ path('app_licence_edit', {'id': licence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_licence_new') }}">Create new</a>
    <br>
    <a href="../../..">retour</a>
{% endblock %}
