{% extends 'base.html.twig' %}

{% block title %}Eleve{% endblock %}

{% block body %}
    <h1>Eleve</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ eleve.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ eleve.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ eleve.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>
                {% if eleve.sexe == 1 %}
                    Femme
                {% elseif eleve.sexe == 2 %}
                    Homme
                {% elseif eleve.sexe == 3 %}
                    Autre
                {% elseif eleve.sexe == 4 %}
                    N'a pas souhaité répondre
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Datedenaissance</th>
                <td>{{ eleve.datedenaissance ? eleve.datedenaissance|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ eleve.adresse }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ eleve.codepostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ eleve.ville }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ eleve.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_eleve_index') }}">back to list</a>

    <a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}">edit</a>

    {{ include('crud/eleve/_delete_form.html.twig') }}
{% endblock %}
