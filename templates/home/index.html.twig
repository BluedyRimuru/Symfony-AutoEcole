            color: #fff;
            font-size: 16px;
            text-transform: uppercase;
            font-weight: 900;
            letter-spacing: 1px;
            box-shadow: 0 5px 25px 0 rgb(232 99 99 / 50%);
            transition: box-shadow .3s;
        }
        .g-btn--dark-red {
            background: -webkit-gradient(linear,left top,left bottom,from(#e55657),to(#e55657));
            background: linear-gradient(rgb(253 105 106 / 1),rgb(239 58 62 / 1));
        }
        .btn-copy {
            cursor: pointer;
        }
        @media (max-width: 768px) {
            .joinSection {
